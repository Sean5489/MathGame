<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sean.mathgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Multiplication"
            android:label="@string/title_activity_2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="MathGame.Multiplication" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Addition"
            android:label="@string/title_activity_2">
            <intent-filter>
                <action android:name="MathGame.Addition" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Subtraction"
            android:label="@string/title_activity_2">
            <intent-filter>
                <action android:name="MathGame.Subtraction" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".End"
            android:label="@string/title_activity_end"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
